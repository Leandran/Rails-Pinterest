

 <div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel-heading center">
      <div class="panel-heading center"><%= image_tag(@pin.image) %></div>
        <div class="panel-body">
            <%= @pin.description %><br/>
            <br/><%= @pin.user.name %><br/>

  

            <% if @pin.user == current_user %>  <!-- if the user is the same user that created the pin-->
                <%= link_to 'Edit', edit_pin_path(@pin) %> |
            <% end %>
            <%= link_to 'Back', pins_path %>
        </div>
    </div>
  </div>
</div>

      
